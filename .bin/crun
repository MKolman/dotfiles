# Takes one C++ source file as input it compiles it and runs it
echo "Building $1..."
g++ $1 -o o${1%.*} --std=c++14 -Wall -O3 -Wextra -pedantic

RET=$?

if [[ $RET == 0 ]]; then
  if [ -f o${1%.*} ]; then
    echo "Running o${1%.*}..."
    time ./o${1%.*}
  else
    echo "No compiled file found."
  fi
else
  echo "Compiling failed."
  exit $RET
fi
